{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src/",
    "paths": {
      "@globals/*": ["components/@globals/*"],
      "@features/*": ["components/features/*"],
      "@ui/*": ["components/ui/*"],
      "@schemas/*": ["schemas/*"],
      "@providers/*": ["providers/*"],
      "@entities/*": ["entities/*"],
      "@utils/*": ["utils/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"],
      "~static/*": ["static/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
